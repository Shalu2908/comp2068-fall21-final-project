<h1>
    {{title}}
</h1>
<!-- A form to fill to add new patient -->
<form method="POST">
    <fieldset>
        <label for="name" class="col-2">
            Name:
        </label>
        <input name="name" id="name" required value="{{patientsLists.name}}"/>
    </fieldset>
    <fieldset>
        <label for="date" class="col-2">
            Date:
        </label>
        <input name="date" id="date" required type="date"  value="{{toShortDate patientsLists.date}}"/>
    </fieldset>
    <fieldset>
        <label for="category" class="col-2">
            Category:
        </label>
        <select name="category" id="category" >
            {{#each categories}}
                {{createOption this.name ../patientsLists.category}}
            {{/each}}
        </select>
    </fieldset>
    <fieldset>
        <label for="status" class="col-2">Status:</label>
        <select name="status" id="status" >
            {{createOption 'Today' ../patientsLists.status}}
            {{createOption 'PostPoned to next week' ../patientsLists.status}}
            {{createOption 'Tomorrow' ../patientsLists.status}}
        </select>
    </fieldset>
    <button class="offset-3 btn btn-primary">
        Save
    </button>
</form>